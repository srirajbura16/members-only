extends layout 

block content 
  h1 Admin Access

  if !currentUser.admin
    form(method='POST' action="")
      div.form-group
        input#name.form-control(type='text', name='code' placeholder="Code" required)
      h4.text-success=successMsg
      button.btn.btn-primary(type='submit') Submit
  else 
    h3.text-success You're already an Admin!
    h4 With Admin Access, you have the ability to delete posts.
