extends layout 

block content 
  h1=title 
  form(method='POST' action="")
    div.form-group
      label(for='title') Title:
      input#name.form-control(type='text', name='title' required)
      br
      label(for='message') Message:
      textarea#name.form-control(type='text', name='message', row="3", required)
    button.btn.btn-primary(type='submit') Submit

  if errors
   ul
    for error in errors
     li!= error.msg